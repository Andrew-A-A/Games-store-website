@using Gamer.gg.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title || Gamer.gg</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="~/css/home.css">
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="position: sticky;">
        <a class="navbar-brand" href="/Home">
            <img src="~/res/favicon.png" width="35">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Game/Index/@Genre.Action">Action <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Racing">Racing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Shooting">Shooting</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Horror">Horror</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Puzzle">Puzzle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Simulation">Simulation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Game/Index/@Genre.Strategy">Strategy</a>
                </li>
            </ul>

        </div>
        @Html.Partial("_LoginPartial")
    </nav>
<div class="container body-content" style="display: block">
    @RenderBody()
</div>
<hr style="display: block"/>
<footer st>
    <p style="text-align: center">&copy; @DateTime.Now.Year - Gamer.gg</p>
</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

@RenderSection("scripts", required: false)

</body>
</html>
